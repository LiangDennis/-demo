/* pages/login/login.wxss */
.view-login {
  background: linear-gradient(0deg, #395fcb 0%, #3657be 35%, #242161 85%, #1a0531 100%);
  position: fixed;
  height: 100%;
  width: 100%;
  /* overflow: hidden; */
}
page {
  height: 100%;
  width: 100%;
}

/* 头部布局 */
.header-style {
  width: 100%;
  height: 300rpx;
  margin-top: 200rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 头像 */
.header-style image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  /* border-radius: 100%; */
}
/* name */
.header-style text:nth-child(2) {
  color: #ddd;
  margin-top: 10rpx;
}
/* address */
.header-style text:nth-child(3) {
  color: #ddd;
  font-size: 28rpx;
  margin-top: 10rpx;
}

/* 用户名，密码 */
.view-user-psw {
  /* background: red; */
  margin-top: 100rpx;
  padding: 0rpx 50rpx;
}
.view-user {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 100rpx;
  height: 70rpx;
  margin-top: 30rpx;
  position: relative;
}
.view-user image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 16rpx;
  left: 50rpx;
}
.view-user input {
  height: 100%;
  padding-left: 120rpx;
  font-size: 32rpx;
  color: #ddd;
}

/* 登录 */
.btn-login {
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 100rpx;

  height: 70rpx;
  line-height: 70rpx;
  border-radius: 70rpx;
  background-color: #157AD6;
  color: #ccc;
  font-size: 34rpx;
}
.btn-hover-class-style {
  opacity: 0.5;
}

/* 注册 */
.text-reg {
  color: #ddd;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  font-size: 34rpx;
}
